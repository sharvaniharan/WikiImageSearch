<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/background</item>
        <item name="android:showDividers">beginning</item>

        <item name="android:actionOverflowButtonStyle">@style/CustomOverflow</item>

    </style>

    <style name="AppTheme.TextView.ColorPrimary.HeadingTextView" parent="AppTheme.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_extra_huge</item>
    </style>

    <style name="AppTheme.TextView.ColorPrimary.MediumTextView" parent="AppTheme.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextView.ColorPrimary.NormalText" parent="AppTheme.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextView" parent="@android:style/TextAppearance.DeviceDefault.Widget.TextView">
        <item name="android:textSize">@dimen/text_extra_small</item>
    </style>

    <style name="CustomOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_brightness_high_black_24dp</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/background</item>
    </style>


    <dimen name="text_extra_small">15sp</dimen>
    <dimen name="text_extra_huge">45sp</dimen>
    <dimen name="text_medium">32sp</dimen>
    <dimen name="text_regular">16sp</dimen>
</resources>
